{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES5",
    "types": [
      "mocha",
      "node"
    ],
    "useDefineForClassFields": false, // Define semantics disabled for performance reasons.
  },
  "exclude": [
    "test/node-legacy"
  ],
  "include": [
    "src",
    "test"
  ]
}
